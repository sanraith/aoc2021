{
    "cSpell.words": [
        "argparse",
        "browserslist",
        "cmiddle",
        "cright",
        "linebreak",
        "nargs",
        "notransition",
        "unsub",
        "webfonts",
        "xdescribe",
        "xtest"
    ],
    "files.exclude": {
        // Defaults
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        // Hide unnecessary folders
        "node_modules/": true,
        "build/": true
    },
    // "jest.jestCommandLine": "npm run test-fix",
    // "jest.autoRun": "off",
    "jest.autoRun": {
        "watch": false,
        // "onSave": "test-src-file"
        "onSave": "test-file"
    }
}